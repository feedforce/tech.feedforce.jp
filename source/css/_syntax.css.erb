.highlight {
    background: #222;
    padding: 10px 20px;
    white-space: pre-wrap;
    word-wrap: break-word;
    border-radius: 5px;
    color: #ccc;
    line-height: 1.5;
    font-size: .95rem;
    font-family: "Source Code Pro", Monaco, Consolas, "Courier New", Courier, monospace, sans-serif;
}

<%= Rouge::Themes::Base16::Monokai.render(:scope => '.highlight') %>
