  <div class="foot-menu">
    <div class="wrapper">
      <div id="widget_recent_entries">
        <h2>Recent posts</h2>
        <ul>
          <% blog.articles[0...6].each do |article| %>
              <li><%= link_to article.title, article %></li>
          <% end %>
        </ul>
      </div>
      <div id="widget_categories"><h2>Categories</h2>
        <ul>
          <% blog.tags.each do |tag, articles| %>
              <li><%= link_to "#{slug_to_japanese(tag)} (#{articles.size})", tag_path(tag) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
